{% extends 'layout.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row d-flex justify-content-center align-items-center">
            <h5>Experience index</h5>
            <button id="toggle_button" class="btn btn-sm d-block d-md-none">
                <span class="navicon"><i class="bi bi-arrows-fullscreen"></i></span>
            </button>
        </div>

        <div class="row">
            <div id="sidebar" class="col-md-4 d-md-block p-3 mb-5">
                {{ include('cv/_sidebar.html.twig') }}
            </div>
            <div class="col-md-7">
                <a href="{{ path('experience_new') }}">Ajouter</a>
                {% for experience in experiences %}
                    <div class="card">
                        <h5 class="card-header">
                            {{experience.jobTitle}}
                        </h5>
                        <div class="card-body">
                            <h5 class="card-title">
                                {{experience.company}}
                            </h5>
                            <h5>
                                de:{{experience.startAt | date('d-m-Y')}}
                                {% if not experience.current %}
                                    Ã :{{experience.endAt | date('d-m-Y')}}
                                {% else %}
                                    en cours...
                                    {# {{experience.current}} #}
                                {% endif %}
                            </h5>
                            <p class="card-text">{{experience.description}}</p>
                            <a href="{{ path('experience_edit', {'id': experience.id}) }}">Modifier</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
    </div>
    
{% endblock %}
