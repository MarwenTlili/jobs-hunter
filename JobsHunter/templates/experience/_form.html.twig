{{ form_start(form, { 'attr': {'novalidate': '' } }) }}
{{ form_row(form._token) }}
<div class="form-group">
	{{ form_label(form.company) }}
	{{ form_widget(form.company) }}
</div>

<div class="form-group">
	{{ form_label(form.jobTitle) }}
	{{ form_widget(form.jobTitle) }}
</div>

<div class="form-group">
	{{ form_label(form.experienceLevel) }}
	{{ form_widget(form.experienceLevel) }}
</div>

<div class="form-group">
	{{ form_label(form.startAt) }}
	{{ form_widget(form.startAt) }}
</div>

<div class="form-group">
	{{ form_label(form.endAt) }}
	{{ form_widget(form.endAt) }}
</div>
<div class="form-group">
	{{ form_label(form.current) }}
	{{ form_widget(form.current) }}
</div>
<div class="form-group">
	{{ form_label(form.description) }}
	{{ form_widget(form.description) }}
</div>
<button class="btn btn-warning" id="submit-button">{{ button_label|default('Save') }}</button>
{{ form_end(form, {'render_rest': false}) }}
