{% extends 'layout.html.twig' %}

{% block title %}
  CV Preview
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row d-flex justify-content-center d-print-none">
      <h4 class="m-4">CV Preview</h4>
      <button id="toggle_button" class="btn d-block d-md-none"><span class="navicon"><i class="bi bi-arrows-fullscreen"></i></span></button>
    </div>

    <div class="row d-print-none">
      <div id="sidebar" class="col-md-4 d-md-block p-3 mb-5 d-print-none">{{ include('cv/_sidebar.html.twig') }}</div>
      <div class="col-md-7 shadow m-1">{{ include('cv/pdf_template.html.twig', { button_label: 'Update' }) }}</div>
    </div>
    <div class="row justify-content-center mt-4">
      <a class="btn btn-primary d-print-none mr-2" href="{{ path('cv_print_pdf', { user: app.user }) }}">Imprimer (PDF)</a>
      <a class="btn btn-success d-print-none" href="{{ path('pdf_template', { user: app.user }) }}">preview</a>
    </div>
  </div>
{% endblock %}
