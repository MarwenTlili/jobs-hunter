{% extends 'layout.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="company">
            <div class="name">
                 <h3>{{ company.name }}</h3>
            </div>

            <div class="address">
                <i class="bi bi-geo-alt"></i> {{ company.address }}
            </div>

            <div class="phone">
                <i class="bi bi-telephone"></i> {{ company.phone }}
            </div>

            <div class="website">
                <i class="bi bi-link"></i> <a href="{{ company.website }}">{{ company.website }}</a>
            </div>

            <div class="trn">
                {{ company.trn }}
            </div>

            <div class="description text-muted">
                {{ company.description }}
            </div>
        </div>
        
    </div>
    
{% endblock %}

