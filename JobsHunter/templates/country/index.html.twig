{% extends 'layout.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Iso</th>
                <th>Name</th>
                <th>NiceName</th>
                <th>Iso3</th>
                <th>NumCode</th>
                <th>PhoneCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.iso }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.niceName }}</td>
                <td>{{ country.iso3 }}</td>
                <td>{{ country.numCode }}</td>
                <td>{{ country.phoneCode }}</td>
                <td>
                    <a href="{{ path('country_show', {'id': country.id}) }}">show</a>
                    <a href="{{ path('country_edit', {'id': country.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('country_new') }}">Create new</a>
{% endblock %}
