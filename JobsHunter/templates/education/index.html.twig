{% extends 'layout.html.twig' %}

{% block title %}Education index{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row d-flex justify-content-center align-items-center">
            <h5>Education index</h5>
            <button id="toggle_button" class="btn btn-sm d-block d-md-none ">
                <span class="navicon"><i class="bi bi-arrows-fullscreen"></i></span>
            </button>
        </div>

        <div class="row">
            <div id="sidebar" class="col-md-4 d-md-block p-3 mb-5">
                {{ include('cv/_sidebar.html.twig') }}
            </div>
            
            <div class="col-md-7">
                <a href="{{ path('education_new') }}">Ajouter</a>
                {% for education in educations %}
                    <div class="card">
                        <h5 class="card-header">
                            {{education.diplomaTitle}}
                        </h5>
                        <div class="card-body">
                            <h5 class="card-title">
                                {{education.establishment}}
                            </h5>
                            <h5>
                                de:{{education.startAt | date('d-m-Y')}}
                                {% if not education.current %}
                                    Ã :{{education.endAt | date('d-m-Y')}}
                                {% else %}
                                    en cours...
                                    {# {{education.current}} #}
                                {% endif %}
                            </h5>
                            <p class="card-text"></p>
                            <a href="{{ path('education_edit', {'id': education.id}) }}">Modifier</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
    
{% endblock %}
